<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1484950763426-56b5bf172dbb?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80);">
  <div class="container text-center">
    <h2>Greetings traveler!</h2>
    <p>Give me a word, and IÂ´ll give you a score</p>
    <ul>
      <% @letters.each do |let| %>
        <li>
          <%= let.upcase %>
        </li>
        <% end %>
    </ul>
    <form action="/score" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
      <%= hidden_field_tag :time, @time %>
      <input type="text" name="answer" placeholder="Type your answer!">
      <input type="submit" value="Play">
    </form>
  </div>
</div>
